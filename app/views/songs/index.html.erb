<div id="container">
	<h5><a href="/users/<%= current_user.id %>">My Account</a></h5>


	<h2>All the songs in our hub: </h2>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<td><h5>Artist</h5></td>
				<td><h5>Title</h5></td>
				<td><h5>Added 'x' Times</h5></td>
				<td><h5>Add to Playlist</h5></td>
			</tr>
		</thead>
		<tbody>
			<% @songs.each do |song| %>
				<tr>
				  <td><h6><%= song.artist %></h6></td>
				  <td><h6><a href="/songs/<%=song.id%>"><%= song.title %></a> </h6></td>
				  <td><h6><%= song.playlist_songs.count %></h6></td>
				  <td><form action = "/songs/<%=song.id=%>" method="post">
		  				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
		  				<input type="hidden" name="song[song_id]" value="<%=song.id %>">
		  				<input type="submit" name="Add" value="Add">
		  				</form>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<form action = "/songs" method = "post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		Title:<input type="text" name="song[title]" >
		Artist:<input type="text" name="song[artist]">
		<input type = 'submit' value = 'Add Song'>
	</form>
