<!-- # add a container for login adjacent to register -->

    <h1> <% if logged_in? -%>Welcome, <%= current_user.first_name %><% end -%></h1>
    <div id="register">
        <h3>Register:</h3>
        <br>
        <form action = "/register" method = "post">
            <input type = "hidden" name = "authenticity_token" value = "<%=form_authenticity_token%>">
            First Name:<input type="text" id="first_name" name = "user[first_name]"><br>
            Last Name:<input type="text" id="last_name" name = "user[last_name]"><br>
            Email:<input type="email" id="Email" name = "user[email]"><br>
            Password:<input type="password" id="Password" name = "user[password]" value="password"><br>
            Password Confirmation:<input type="password" id="Password_Confirmation" name = "user[password_confirmation]" value='password'><br>
        <input type="submit" name="Join" value="Join">
        </form>
    </div><!-- end register div -->

    <div id="login">
        <h3>Login:</h3>
        <form action="/login" method="post">
          <input type='hidden' name="authenticity_token" value= "<%=form_authenticity_token%>">
          Email:<input type="text" id="Email" name="user[email]"><br>
          Password<input type="password" id="Password" name="user[password]" value="password">
          <br>
          <br>
          <input type = "submit" name="Log In" value = " Log In ">
        </form>

    </div><!-- end login div -->
