<!-- # add a container for login adjacent to register -->

    <h1> <% if logged_in? -%>Welcome, <%= current_user.name %><% end -%></h1>
    <div id="register">
        <h3>Register:</h3>
        <br>
        <form action = "/register" method = "post">
            <input type = "hidden" name = "authenticity_token" value = "<%=form_authenticity_token%>">
            Name:<input type="text" id="name" name = "user[name]"><br>
            Alias:<input type="text" id="alias" name = "user[alias]"><br>
            Email:<input type="email" id="Email" name = "user[email]"><br>
            Password:<input type="password" id="Password" name = "user[password]" value="password"><br>
            <h5>*Password should be at least 8 characters</h5>
            Confirm PW:<input type="password" id="Password_Confirmation" name = "user[password_confirmation]" value='password'><br>
        <input type="submit" name="Register" value="Register">
        </form>
    </div><!-- end register div -->

    <div id="login">
        <h3>Login:</h3>
        <form action="/login" method="post">
          <input type='hidden' name="authenticity_token" value= "<%=form_authenticity_token%>">
          Email:<input type="text" id="Email" name="user[email]"><br>
          Password<input type="password" id="Password" name="user[password]" value="password">
          <br>
          <br>
          <input type = "submit" name="Log In" value = " Log In ">
        </form>

    </div><!-- end login div -->
