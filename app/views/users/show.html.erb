

<div id="container">
	<h2>My Account</h2>  <a href="/songs">Dashboard</a>


	<table class="table table-striped table-bordered">
		<thead>
			Hi There <h3><%= current_user.first_name %> <%=current_user.last_name %>'s Playlist</h3>
			<tr>
				<td><h5>Artist</h5></td>
				<td><h5>Title</h5></td>
				<td><h5>Added 'x' Times</h5></td>
			</tr>
		</thead>
		<tbody>
			<% current_user.playlist.songs.each do |song| %>
            <tr>
                <td><h6><%= song.title %></h6></td>
				<td><h6><%= song.artist %></h6></td>
                <td><h6><%= song.playlists.count %></h6></td>
            </tr>

		<% end %>
		</tbody>
	</table>


</div>
